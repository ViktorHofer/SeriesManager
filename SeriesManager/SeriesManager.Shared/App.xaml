<prism:SplashOptimizedMvvmAppBase
    x:Class="SeriesManager.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uniconverter="using:UniRock.Converters"
    xmlns:prism="using:Microsoft.Practices.Prism.Mvvm"
    xmlns:system="using:System">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Themes -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ColorThemes.xaml" />
                <ResourceDictionary Source="/Themes/ControlStyles.xaml" />
                <ResourceDictionary Source="/Themes/DataTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converter -->
            <uniconverter:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter" />
            <uniconverter:StringFormatConverter x:Key="StringFormatConverter" />
            <uniconverter:NullBooleanConverter x:Key="NullBooleanConverter" />
            <uniconverter:BooleanNegationConverter x:Key="BooleanNegationConverter" />

        </ResourceDictionary>
    </Application.Resources>
    
</prism:SplashOptimizedMvvmAppBase>
